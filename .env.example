# Database
DATABASE_URL="file:./prisma/dev.db"

# Authentication
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST="true"

# Google OAuth (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# Email (Resend)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# Business Register API (Uzņēmumu Reģistrs)
# OAuth 2.0 Authentication URL
BR_AUTH_URL="https://ha.vraa.gov.lv/STS/VISS.Pfas.STS/oauth2/token"

# API Credentials (provided by VDAA)
BR_CONSUMER_KEY="your-consumer-key"
BR_CONSUMER_SECRET="your-consumer-secret"

# PFAS Certificate (required for live API)
BR_CERTIFICATE_PATH="/path/to/your/certificate.pfx"
BR_CERTIFICATE_PASSWORD="your-certificate-password"

# Development Mode (set to "true" to use mock data before certificate is ready)
BR_USE_MOCK_DATA="true"

# Site Maintenance
SITE_ENABLED="true"
